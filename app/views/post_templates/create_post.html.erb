<h1>Create a new post</h1>

<form action="/create_post">
  <label for="title">Post Title</label>
  <input id="title" type="text" name="query_title">

  <label for="body">Post Body</label>
  <textarea name="query_body" id="body" cols="30" rows="10"></textarea>

  <label for="post_creator">Who's Posting?</label>
  <input id="post_creator" type="text" name="query_author">

  <button>Create post</button>
</form>
